include partials/header.pug
include partials/nav.pug
main.container  
    if locals.error    
        div(role="alert").alert.alert-danger
            = error
    if locals.success    
        div(role="alert").alert.alert-success
            = success
    .row 
        .col-md-4
            .card
                .card-header    
                    h5 Ajouter un article
                .card-body  
                    form(action="/add", method="POST")
                        .form-group
                            label(for="todo")
                            input(type="text", id="todo", name="article").form-control
                        button(type="submit").btn.btn-success.btn-block 
                            i.fas.fa-plus.pr-2
                            b Ajouter
        .col-md-8
            table.table.table-striped
                thead
                    tr
                        th(scope='col') Courses
                        th(scope='col') Editer
                        th(scope='col') Supprimer
                tbody
                    each article in articles
                        tr
                            td(scope="row")= article.designation
                            td  
                                a(href="/update/" + article.id).btn.btn-info.btn-sm
                                    i.fas.fa-pencil-alt
                            td  
                                form(method="POST", action="/delete/" + article.id + "?_method=DELETE" )
                                    button(type="submit").btn.btn-danger.btn-sm 
                                        i.fas.fa-trash-alt
                
include partials/footer.pug